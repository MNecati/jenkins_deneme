pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'echo "Build"'
                sh 'echo "Some build output" > build.log'
            }
        }
        stage('Test') {
            steps {
                sh 'echo "Test"'
            }
        }
    }
    post {
        always {
            emailext body: "Jenkins build ${currentBuild.currentResult}.\n\nPlease check the build artifacts in the console output.",
                subject: "Jenkins build ${currentBuild.currentResult}",
                to: 'recipient@example.com',
                charset: 'UTF-8', attachmentsPattern: 'build.log',
                mimeType: 'text/plain'
        }
    }
}
